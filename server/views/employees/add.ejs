<% include ../partials/header.ejs %>


<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6"></div>
        <h1><%= title %></h1>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="idTextField">ID</label>
                <input type="number" class="form-control"
                id="deepartmentTextField"
                placeholder="Enter Employee id"
                name="id" required>


            <div class="form-group">
                <label for="nameTextField">Employee Name</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter Employee Name"
                name="name" required>
            </div>

            <div class="form-group">
                <label for="departmentTextField">Department</label>
                <input type="text" class="form-control"
                id="deepartmentTextField"
                placeholder="Enter Employee Department"
                name="department" required>

                <div class="form-group">
                    <label for="designationTextField">Designation</label>
                    <input type="text" class="form-control"
                    id="designationTextField"
                    placeholder="Enter Employee Designation"
                    name="designation" required>
                </div>

                <div class="form-group">
                    <label for="salaryTextField">Salary</label>
                    <input type="number" class="form-control"
                    id="salaryTextField"
                    placeholder="Enter Employee Salary"
                    name="salary" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit
                </button>

                <a href="/employees" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>


